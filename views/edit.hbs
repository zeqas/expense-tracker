<div class="container record-edit-form shadow">
  <form action="/records/{{ record._id }}?_method=PUT" method="POST" class="d-flex flex-column my-3 needs-validation" novalidate>

    <div class="d-flex justify-content-between my-3">
      <div class="col-sm-2 fs-7">*必填欄位</div>
      <div class="col-sm-10">請輸入你的支出</div>
    </div>

    <div class="record-name-group d-flex justify-content-between mb-3">
      <label for="name" class="col-sm-2 col-form-label">名稱*：</label>
      <input type="text" class="form-control" id="name" name="name" value="{{ record.name }}" required>
    </div>

    <div class="record-date-group d-flex justify-content-between mb-3">
      <label for="date" class="col-sm-2 col-form-label">日期*：</label>
      <input type="date" class="form-control" id="date" name="date" value="{{ record.date }}" required>
    </div>

    <div class="record-cate d-flex justify-content-between  align-items-center mb-3">
      <label for="category" class="col-sm-2 col-form-label">類別*：</label>
      <div class="col-sm-10 justify-content-end">
        <select class="form-select ml-2 justify-content-end"  id="category" name="category" aria-label="Default select" data-value="{{ record.category }}"  required>
          <option value="" selected>請選擇分類</option>
          {{#each categoryList}}
          <option value="{{ this.categoryName }}">{{ this.categoryName }}</option>
          {{/each}}
        </select>
      </div>
    </div>

    <div class="record-amount d-flex justify-content-between mb-3">
      <label for="amount" class="col-sm-2 col-form-label">金額*：</label>
      <input type="number" class="form-control col-sm-10" id="amount" name="amount" value="{{ record.amount }}"
        required>
    </div>

    <div class="d-flex justify-content-end mb-3">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-success col-12">送出</button>
      </div>
    </div>

  </form>
</div>

<script src="/tools/formValidation.js"></script>